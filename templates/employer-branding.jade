extends layout

block body
  section
    .full-screen-section
      +coverVideo('https://s3.eu-central-1.amazonaws.com/videos.flipbase.com/www-cover-vertidrive/upload_f07e385b544223a8ea551a8c34966879', 'https://s3.eu-central-1.amazonaws.com/videos.flipbase.com/www-cover-vertidrive/thumbs/cover.jpg')
      .row.vertical-centered-text
        .small-11.small-centered
          h1.main-header= page.metadata.titles.header
          p.main-subheader= page.metadata.titles.subheader
    
  
  //- ADVANTAGES OF VIDEO
  //- STYLES FOR THIS SECTION YOU CAN FIND IN sollicitatie-proces.scss
  section
    .expanded.features_1_section
      .row(data-aos="fade-zoom-in")
        .medium-6.medium-centered.features_1_header_block
          h2.features_1_title #{page.metadata.whyvideo.title}
          p.features_1_subheader #{page.metadata.whyvideo.subtitle}
        .medium-5.columns.features_1_content
          .row
            // Feature 1
            .small-1.columns.features_1_icon
              i.ion-person-add
            .small-11.columns.features_1_text
              p #{page.metadata.whyvideo.feature1}

            // Feature 2
            .small-1.columns.features_1_icon
              i.ion-funnel
            .small-11.columns.features_1_text
              p  #{page.metadata.whyvideo.feature2}

            // Feature 3  
            .small-1.columns.features_1_icon
              i.ion-search
            .small-11.end.columns.features_1_text
              p  #{page.metadata.whyvideo.feature3}

        .medium-5.columns.features_1_content
          .row
            // Feature 4
            .small-1.columns.features_1_icon
              i.ion-thumbsup
            .small-11.columns.features_1_text
              p  #{page.metadata.whyvideo.feature4}

            // Feature 5
            .small-1.columns.features_1_icon
              i.ion-forward
            .small-11.columns.features_1_text
              p  #{page.metadata.whyvideo.feature5}

            // Feature 6 
            .small-1.columns.features_1_icon
              i.ion-ios-videocam
            .small-11.end.columns.features_1_text
              p  #{page.metadata.whyvideo.feature6}

  //- WHAT IS EB?
  section
    .row.custom_text_section_1
      .small-11.medium-7.large-6(data-aos="fade-zoom-in")
        h3 #{page.metadata.about.header}
        p !{page.metadata.about.text}
  
  //- HOW DOES IT WORKS?
  //- You can find styles for this section in pages/_employer-branding.scss
  section
    .expanded.features_6_section
    
      // Feature 1
      
      .row.split_section-right.row90(data-equalizer data-equalize-on="large", data-aos="fade-zoom-in")
        .medium-4.medium-centered.features_6_header_block
          h2.features_1_title #{page.metadata.howdoesitworks.title}

        // Mobile Image
        .small-12.columns.hide-for-large
          img(src="#{locals.path}/assets/images/employer-branding/1.png" srcset="#{locals.path}/assets/images/employer-branding/1@2x.png 2x, #{locals.path}/assets/images/employer-branding/1@3x.png 3x" style="margin-bottom: 10px")

        // Description
        .small-11.large-4.large-push-1.columns.fix(data-equalizer-watch)
          h4 #{page.metadata.howdoesitworks.header1}
          p !{page.metadata.howdoesitworks.text1}

        // Desktop Image
        .medium-12.column52.columns.show-for-large.vertical_centered(data-equalizer-watch)
          .vertical_centered_content
            img(src="#{locals.path}/assets/images/employer-branding/1.png" srcset="#{locals.path}/assets/images/employer-branding/1@2x.png 2x, #{locals.path}/assets/images/employer-branding/1@3x.png 3x" width="100%")

      //Feature 2    
      .row.split_section-left.row90(data-equalizer data-equalize-on="medium", data-aos="fade-zoom-in")
        .medium-12.column52.columns(data-equalizer-watch)
          img.custom-padding(src="#{locals.path}/assets/images/visual.png" srcset="#{locals.path}/assets/images/visual@2x.png 2x, #{locals.path}/assets/images/visual@3x.png 3x" width="100%")
        .small-11.medium-12.large-3.large-pull-2.columns.vertical_centered(data-equalizer-watch)
          .vertical_centered_content
            h4 #{page.metadata.howdoesitworks.header2}
            p !{page.metadata.howdoesitworks.text2} 

      // Feature 3
      .row.split_section-left.row90(data-equalizer data-equalize-on="medium", data-aos="fade-zoom-in")

        // Mobile image
        .small-12.columns.hide-for-large
          img(src="#{locals.path}/assets/images/employer-branding/3.png" srcset="#{locals.path}/assets/images/employer-branding/3@2x.png 2x, #{locals.path}/assets/images/employer-branding/3@3x.png 3x")

        // Description
        .small-11.medium-12.medium-uncentered.large-3.large-push-2.columns.vertical_centered(data-equalizer-watch)
          .vertical_centered_content
            h4 #{page.metadata.howdoesitworks.header3}
            p !{page.metadata.howdoesitworks.text3}

        // Desktop Image
        .medium-6.column52.columns.show-for-large(data-equalizer-watch)
          img(src="#{locals.path}/assets/images/employer-branding/3.png" srcset="#{locals.path}/assets/images/employer-branding/3@2x.png 2x, #{locals.path}/assets/images/employer-branding/3@3x.png 3x" width="100%")
  
