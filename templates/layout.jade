include mixins/mixins

doctype html
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      | !{ livereloadScript }
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      link(rel="shortcut icon" href="#{locals.path}/assets/images/favicon.ico")
      
      block metatags
        if page && page.metadata && page.metadata.socialmedia && page.metadata.socialmedia.title
          +OpenGraphMetaTags(page.metadata.socialmedia.title,
            page.metadata.socialmedia.desc,
            page.metadata.socialmedia.embed_url,
            page.metadata.socialmedia.image,
            page.metadata.socialmedia.video,
            page.metadata.socialmedia.video_type,
            page.metadata.socialmedia.width,
            page.metadata.socialmedia.height)

      block title 
        title #{locals.name}
      
      block stylesheets
        link(href="#{locals.path}/assets/css/dependencies.min.#{locals.version}.css" type="text/css" rel="stylesheet")
        link(href="#{locals.path}/assets/css/style.#{locals.version}.css" type="text/css" rel="stylesheet")

      block scripts
        script(src='#{locals.path}/assets/js/modernizr.custom.min.#{locals.version}.js')
        script(src="https://app.flipbase.com/player.js")
        script.
          //- Alternative typekit loader that stores font in a session, which should lead to faster loading times
          (function(d) {
            var tkTimeout=3000;
            if(window.sessionStorage){if(sessionStorage.getItem('useTypekit')==='false'){tkTimeout=0;}}
            var config = {
              kitId: 'uvu0omm',
              scriptTimeout: tkTimeout
            },
            h=d.documentElement,t=setTimeout(function(){h.className=h.className.replace(/\bwf-loading\b/g,"")+" wf-inactive";if(window.sessionStorage){sessionStorage.setItem("useTypekit","false")}},config.scriptTimeout),tk=d.createElement("script"),f=false,s=d.getElementsByTagName("script")[0],a;h.className+=" wf-loading";tk.src='//use.typekit.net/'+config.kitId+'.js';tk.async=true;tk.onload=tk.onreadystatechange=function(){a=this.readyState;if(f||a&&a!="complete"&&a!="loaded")return;f=true;clearTimeout(t);try{Typekit.load(config)}catch(e){}};s.parentNode.insertBefore(tk,s)
          })(document);

        <!--[if lt IE 9]>
        script(src='#{locals.path}/assets/components/html5shiv/dist/html5shiv.min.js')
        <![endif]-->
