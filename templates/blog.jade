// You can find styles for this section in pages/_blog.scss

extends layout

block body
  .row.blog_section
    .small-10.small-centered.blog_title
      h1 Blog
    .small-12.blog_categories
      ul
        li
          a Case studies
        li
          a Product updates
        li
          a Applications
        li
          a Applications
    .small-10.medium-8.large-6.small-centered.blog_article_list
      //- Iterate over blog/articles directory
      each article in articles
        - var date = moment.utc(article.date).format('DD MMMM YYYY')
        section.blog_article
          if (article.metadata.cover)
            img(src="#{article.metadata.cover}")
          h4.blog_article_header
            a(href=locals.path + article.url)= article.title
          span.blog_article_meta Geschreven door #{article.metadata.author} op #{date}

          //- Wintersmith searches for <span class="more"></span>, <hr/> or first <h2> element, if one of those is present a `hasMore` and a `intro` property are available
          if article.hasMore
            p!= article.intro
            //-span.more
              a(href=locals.path + article.url) Lees verder....
          else
            p!= article.html
          .blog_article_divider
           
      ul.pagination.text-center(role='navigation', aria-label='Pagination')
        li
          a(href="")
            i.ion-chevron-left
        li
          a(href='#', aria-label='Page 2') 2
        li
          a(href='#', aria-label='Page 3') 3
        li
          a(href='#', aria-label='Page 3') 4
        li.ellipsis
        li
          a(href='#', aria-label='Page 13') 13
        li
          a(href="")
            i.ion-chevron-right

      
      // div.paginate
        if prevPage
          a(href=prevPage.url class="paginator") #[i(class="fa fa-long-arrow-left" aria-hidden="true")] Nieuwere posts
        if nextPage
          a(href=nextPage.url data-type="page-transition" class="paginator") Oudere posts #[i(class="fa fa-long-arrow-right" aria-hidden="true")]