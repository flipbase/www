// You can find styles for this section in pages/_blog.scss

extends layout

block body
  .row.blog_section

    include partials/blog/_header

    if tagName
      .small-10.medium-8.large-6.small-centered
        section
          h2 Posts over `#{tagName}`

    .small-10.medium-8.large-6.small-centered.blog_article_list
      //- Iterate over blog/articles directory
      each article in articles
        - var date = moment.utc(article.date).format('DD MMMM YYYY')
        section.blog_article
          if (article.metadata.cover)
            img(src="#{article.metadata.cover}")
          h4.blog_article_header
            a(href=locals.path + article.url)= article.title
          span.blog_article_meta Geschreven door #{article.metadata.author} op #{date}

          //- Wintersmith searches for <span class="more"></span>, <hr/> or first <h2> element, if one of those is present a `hasMore` and a `intro` property are available
          if article.hasMore
            p!= article.intro
            //-span.more
              a(href=locals.path + article.url) Lees verder....
          else
            p!= article.html
          .blog_article_divider
           
      ul.pagination.text-center(role='navigation', aria-label='Pagination')
        if prevPage
          li
            a(href=prevPage.url style="padding: 10px;")
              i(class="ion-chevron-left" aria-hidden="true")
              span(style="margin: 10px;") Nieuwere posts
        if nextPage
          li
            a(href=nextPage.url style="padding: 10px;")
              span(style="margin: 10px;") Oudere posts
              i(class="ion-chevron-right" aria-hidden="true")

